#!/bin/bash

# Find the git root from the file's directory
git_root=$(git -C "$(dirname "$1")" rev-parse --show-toplevel 2>/dev/null)

# If a git root was found, cd into it and open the file in nvim
if [ -n "$git_root" ]; then
	cd "$git_root" && nvim "$1"
else
	echo "No git repository found for $1"
fi
