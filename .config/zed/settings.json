{
  "base_keymap": "VSCode",
  "buffer_font_size": 18,
  "vim_mode": true,
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "theme": "Gruvbox Dark Hard",
  "show_completions_on_input": true,
  "git": {
    "git_gutter": "tracked_files"
  },
  "project_panel": {
    "git_status": true,
  },
  "language_overrides": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
