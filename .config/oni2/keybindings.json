[
  { "key": "<D-1>", "command": "workbench.view.explorer" },
  { "key": "<D-4>", "command": "workbench.action.findInFiles" },
  { "key": "<D-7>", "command": "workbench.view.extensions" },
  { "key": "<D-9>", "command": "workbench.view.scm" },

  { "key": "<leader>w", "command": ":wa", "when": "normalMode" },

  { "key": "<leader>l", "command": ":vsplit", "when": "normalMode" },
  { "key": "<leader>j", "command": ":split", "when": "normalMode" },
  { "key": "<C-h>", "command": "window.moveLeft", "when": "normalMode" },
  { "key": "<C-j>", "command": "window.moveDown", "when": "normalMode" },
  { "key": "<C-k>", "command": "window.moveUp", "when": "normalMode" },
  { "key": "<C-l>", "command": "window.moveRight", "when": "normalMode" },

  { "key": "<A-h>", "command": "vim.decreaseHorizontalWindowSize" },
  { "key": "<A-l>", "command": "vim.increaseHorizontalWindowSize" },
  { "key": "<A-j>", "command": "vim.decreaseVerticalWindowSize" },
  { "key": "<A-k>", "command": "vim.increaseVerticalWindowSize" },

  { "key": "<S-TAB>", "command": ":tabp" },
  { "key": "<TAB>", "command": ":tabn" },
  { "key": "<leader>to", "command": ":tabnew", "when": "normalMode" },
  { "key": "<leader>1", "command": "1gt", "when": "normalMode" },
  { "key": "<leader>2", "command": "2gt", "when": "normalMode" },
  { "key": "<leader>3", "command": "3gt", "when": "normalMode" },
  { "key": "<leader>4", "command": "4gt", "when": "normalMode" },
  { "key": "<leader>5", "command": "5gt", "when": "normalMode" },
  { "key": "<leader>6", "command": "6gt", "when": "normalMode" },
  { "key": "<leader>7", "command": "7gt", "when": "normalMode" },
  { "key": "<leader>8", "command": "8gt", "when": "normalMode" },
  { "key": "<leader>9", "command": "9gt", "when": "normalMode" },

  {
    "key": "<C-Space>",
    "command": "editor.action.triggerSuggest",
    "when": "(normalMode || insertMode) && editorTextFocus && !suggestWidgetAvailable"
  }
]

